<Window x:Class="LeagueDataAnalyzer2.View.MatchHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueDataAnalyzer2.View"
        xmlns:vm="clr-namespace:LeagueDataAnalyzer2.ViewModel" 
        mc:Ignorable="d"
        Title="MatchHistory" Height="500" Width="300" 
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:ViewModelMatchHistory/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.878*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="2">
            <TextBlock FontWeight="Bold" Margin="10,5" Text="Player name: "><Run Text="{Binding PlayerName}"/></TextBlock>
            <TextBlock FontWeight="Bold" Margin="10,5" Text="Player level: "><Run Text="{Binding PlayerLevel}"/></TextBlock>
            <DataGrid x:Name="MatchesData" ItemsSource="{Binding Matches}" HorizontalAlignment="Right" Height="115" Width="272" Margin="0,0,10,0" RenderTransformOrigin="0.499,0.684"/>
            <TextBlock FontWeight="Bold" Margin="10,5" Text="The TestText property says '"><Run Text="{Binding TextProperty1}"/><Run Text="'"/></TextBlock>
            <Button Content="Change Text" Command="{Binding TextProperty1}" CommandParameter="{Binding TextProperty1, ElementName=MatchesData}" Margin="10,0"/>
        </StackPanel>
        <Button x:Name="button"  Click="BackToSearchClick" HorizontalAlignment="Left" Margin="197,236,0,0" VerticalAlignment="Top" Width="85" Height="23" Command="{Binding SummonerName}" Content="Back to search"/>
    </Grid>
</Window>
